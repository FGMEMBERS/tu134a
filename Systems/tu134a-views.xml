<?xml version="1.0" encoding="UTF-8"?> 

<PropertyList>

  <chase-distance-m type="double" archive="y"> -40 </chase-distance-m>

<!--
views from captain backwards (shift+v)
1: copilot
2: navigator
3: passanger
-->

  <view n="100">
    <name>Passanger View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y"> -1.10 </x-offset-m> <!-- Left -->
      <y-offset-m archive="y"> -0.90 </y-offset-m> <!-- Down -->
      <z-offset-m archive="y">  3.80 </z-offset-m> <!-- Back -->
      <pitch-offset-deg> 0 </pitch-offset-deg>
      <default-field-of-view-deg> 60 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="101">
    <name>Navigator View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.00 </x-offset-m> <!-- Center -->
      <y-offset-m archive="y">  -1.25 </y-offset-m> <!-- Down -->
      <z-offset-m archive="y"> -17.00 </z-offset-m> <!-- Front -->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 80 </default-field-of-view-deg>
    </config>
  </view>

  <view n="102">
    <name>Copilot View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.47 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.43 </y-offset-m> <!-- Down -->
      <z-offset-m archive="y"> -15.17 </z-offset-m> <!-- Front -->
      <pitch-offset-deg> 2 </pitch-offset-deg>
      <default-field-of-view-deg> 80 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="0">
    <name>Captain View</name>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  -0.47 </x-offset-m> <!-- Left -->
      <y-offset-m archive="y">  -0.43 </y-offset-m> <!-- Down -->
      <z-offset-m archive="y"> -15.17 </z-offset-m> <!-- Front -->
      <pitch-offset-deg> -10 </pitch-offset-deg>
      <default-field-of-view-deg> 80 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

</PropertyList>
