<!-- Variometer
3D instrument for Tu-154 -->
<PropertyList>
 <path>var-30.ac</path>

<!-- Internal instruments lighting -->
  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/tu134a/Models/Effects/glass/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
  	<entry><ind>	5708.66</ind>	<dep>	177.0</dep></entry>
	<entry><ind>	3937.0</ind>	<dep>	142.0</dep></entry>
	<entry><ind>	1968.5</ind>	<dep>	83.0</dep></entry>
	<entry><ind>	984.25</ind>	<dep>	44.0</dep></entry>
	<entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
        <entry><ind>	-984.25</ind>	<dep>	-44.0</dep></entry>
        <entry><ind>	-1968.5</ind>	<dep>	-83.0</dep></entry>
        <entry><ind>	-3937.0</ind>	<dep>	-142.0</dep></entry>
        <entry><ind>	-5708.66</ind>	<dep>	-177.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
