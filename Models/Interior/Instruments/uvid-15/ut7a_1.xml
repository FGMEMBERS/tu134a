<!-- Exhaust gas temperature indicator UT-7A-710 3D instrument for Tu-134 -->
<PropertyList>
  <path>uvid-15f.ac</path>

  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <object-name>knob</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/tu134a/Models/Effects/glass/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

  <!--Needles-->
  <animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>/engines/engine[0]/egt-degf</property>
    <!-- Temperature degc -->
    <factor> -17.22 </factor>
    <interpolation>
      <entry><ind> 300 </ind><dep> -130 </dep></entry>
      <entry><ind> 600 </ind><dep>    0 </dep></entry>
      <entry><ind> 900 </ind><dep>  130 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>engines/engine[0]/epr</property>
    <factor> 3.6 </factor>
    <offset-deg> 180 </offset-deg>
    <center>
      <x-m>  0.000000 </x-m>
      <y-m>  0.000436 </y-m>
      <z-m> -0.021350 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
</PropertyList>
