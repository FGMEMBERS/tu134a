<PropertyList>
  <path>asi.ac</path>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>index</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/tu134a/Models/Effects/glass/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>index</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
